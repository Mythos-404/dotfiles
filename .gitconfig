[user]
	name = Mythos_404
	email = mythos_404@outlook.com
[commit]
	template = /home/mythos_404/.gitconf/git-commit-template.txt
[init]
	defaultBranch = main

[core]
	pager = delta
	symlinks = true
	excludesfile = /home/mythos_404/.gitconf/gitignore_global
[pager]
	log = rg -v '^    <!-- ' | delta  # or less
[interactive]
	diffFilter = delta --color-only
[delta]
	side-by-side = true

[merge]
	tool = nvimdiff
[mergetool]
	prompt = false
	guiDefault = false
	keepBackup = false
